                            </MudItem>
                            
                            <MudItem xs="12" md="4">
                                <MudSwitch @bind-Value="_settings.Performance.EnableQueryOptimization"
                                           Label="Optimización de Consultas"
                                           Color="Color.Info" />
                            </MudItem>
                            
                            <MudItem xs="12" md="4">
                                <MudSwitch @bind-Value="_settings.Performance.EnablePerformanceMonitoring"
                                           Label="Monitoreo de Performance"
