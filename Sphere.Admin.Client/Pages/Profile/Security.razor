                        </div>
                    </MudCardContent>
                </MudCard>

                <!-- Consejos de seguridad -->
                <MudCard>
                    <MudCardHeader>
                        <MudText Typo="Typo.h6">üí° Consejos de Seguridad</MudText>
                    </MudCardHeader>
                    <MudCardContent>
                        <div class="d-flex flex-column gap-2">
                            <MudAlert Severity="Severity.Info" Dense="true">
