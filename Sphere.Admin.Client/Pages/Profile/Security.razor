    private IEnumerable<string> ValidatePassword(string password)
    {
        if (string.IsNullOrEmpty(password))
            yield break;

        if (password.Length < 8)
            yield return "La contrase√±a debe tener al menos 8 caracteres";

        if (!password.Any(char.IsUpper))
            yield return "La contrase√±a debe contener al menos una letra may√∫scula";

        if (!password.Any(char.IsLower))
            yield return "La contrase√±a debe contener al menos una letra min√∫scula";

        if (!password.Any(char.IsDigit))
            yield return "La contrase√±a debe contener al menos un n√∫mero";

        if (!password.Any(ch => !char.IsLetterOrDigit(ch)))
            yield return "La contrase√±a debe contener al menos un car√°cter especial";
    }

