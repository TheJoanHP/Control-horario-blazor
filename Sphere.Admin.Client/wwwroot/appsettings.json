{
  "ApiBaseUrl": "http://localhost:5110",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AppSettings": {
    "ApplicationName": "Sphere Admin",
    "Version": "1.0.0",
    "CompanyName": "Sphere Control System",
    "SupportEmail": "support@sphere-control.com",
    "DocumentationUrl": "https://docs.sphere-control.com"
  },
  "Features": {
    "EnableNotifications": true,
    "EnableAnalytics": true,
    "EnableBackups": true,
    "EnableAdvancedReports": true
  },
  "Security": {
    "TokenExpirationMinutes": 60,
    "RefreshTokenEnabled": true,
    "TwoFactorEnabled": false
  },
  "UI": {
    "DefaultTheme": "Light",
    "ItemsPerPage": 25,
    "EnableAnimations": true,
    "CompactMode": false
  }
}